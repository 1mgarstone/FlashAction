# ============ RISK MANAGEMENT ============
# Maximum gas price (in gwei)
MAX_GAS_PRICE=100

# Minimum profit threshold (in USD)
MIN_PROFIT_THRESHOLD=50

# Maximum position size (percentage of balance)
